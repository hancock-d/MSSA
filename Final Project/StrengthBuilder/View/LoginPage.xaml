<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrengthBuilder.View.LoginPage"
             xmlns:vm="clr-namespace:StrengthBuilder.ViewModels"
             Title="Login">

    <ContentPage.BindingContext>
        <vm:LoginViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Enter your username:"
               FontSize="20"
               HorizontalOptions="Center"/>
        <Entry Placeholder="Username" Text="{Binding Username}"
               FontSize="14"
               HorizontalOptions="Center"
               WidthRequest="200"
               HeightRequest="30"/>
        <Button Text="Continue" Command="{Binding LoginCommand}"
                FontSize="14"
                HorizontalOptions="Center"
                WidthRequest="125"
                HeightRequest="40"
                CornerRadius="10"/>
    </VerticalStackLayout>
</ContentPage>