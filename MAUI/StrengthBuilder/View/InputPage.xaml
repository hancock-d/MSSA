<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrengthBuilder.View.InputPage"
             xmlns:vm="clr-namespace:StrengthBuilder.ViewModels"
             Title="Input 1RM">

    <ContentPage.BindingContext>
        <vm:InputViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10" Spacing="10">

            <Label Text="Squat 1RM:" FontSize="20"
               HorizontalOptions="Center"/>
            <Entry Placeholder="e.g. 225" HorizontalOptions="Center" WidthRequest="100"
                   MinimumHeightRequest="10"
               Keyboard="Numeric"
               Text="{Binding SquatMax}"/>

        <Button Text="Continue" Margin="0" FontSize="14"
                WidthRequest="125" MinimumHeightRequest="40"
                HorizontalOptions="Center"
                Command="{Binding ContinueCommand}"/>
    </VerticalStackLayout>
</ContentPage>