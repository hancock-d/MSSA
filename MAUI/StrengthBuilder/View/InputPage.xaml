<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrengthBuilder.View.InputPage"
             xmlns:vm="clr-namespace:StrengthBuilder.ViewModels"
             Title="Input 1RM">

    <ContentPage.BindingContext>
        <vm:InputViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Enter your Squat 1RM:" FontSize="20"/>
        <Entry Placeholder="e.g. 225"
               Keyboard="Numeric"
               Text="{Binding SquatMax}"/>

        <Button Text="Continue" Command="{Binding ContinueCommand}"/>
    </VerticalStackLayout>
</ContentPage>