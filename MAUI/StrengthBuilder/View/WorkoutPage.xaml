<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="StrengthBuilder.View.WorkoutPage"  
            xmlns:vm="clr-namespace:StrengthBuilder.ViewModels"  
            Title="Workout">

    <ContentPage.BindingContext>
        <vm:WorkoutViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <Label Text="Today's Workout" FontSize="24" HorizontalOptions="Center"/>
        <Label Text="{Binding SelectedDay}" FontSize="20" HorizontalOptions="Center"/>

        <CollectionView ItemsSource="{Binding SquatSets}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray">
                        <Label Text="{Binding}" FontSize="18"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Back to Days/Week view"
                Command="{Binding GoBackCommand}"/>
    </VerticalStackLayout>
</ContentPage>