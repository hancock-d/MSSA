<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StrengthBuilder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:StrengthBuilder.View"
    xmlns:local="clr-namespace:StrengthBuilder"
    Shell.FlyoutBehavior="Flyout"
    Title="StrengthBuilder">

    <!--Register pages-->
    <ShellContent
        Title="Input"
        ContentTemplate="{DataTemplate view:InputPage}"
        Route="input"/>

    <ShellContent
        Title="Week"
        ContentTemplate="{DataTemplate view:WeekPage}"
        Route="week" />

</Shell>
